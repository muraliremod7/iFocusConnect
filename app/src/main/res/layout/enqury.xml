<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/sta_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Enquiries"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/veiw"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="4dp"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/bus_enq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veiw"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:background="@android:color/white"
        android:drawableRight="@drawable/next_str"
        android:paddingRight="15dp"
        android:text="Business Enquiries"
        android:textColor="@color/sta_bg"
        android:textSize="18dp" />

    <Button
        android:id="@+id/general_enq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bus_enq"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@android:color/white"
        android:drawableRight="@drawable/next_str"
        android:paddingRight="15dp"
        android:padding="20dp"
        android:text="General Enquiries"
        android:textColor="@color/sta_bg"
        android:textSize="18dp" />

    <Button
        android:id="@+id/bld_enq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/general_enq"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        android:drawableRight="@drawable/next_str"
        android:paddingRight="15dp"
        android:padding="20dp"
        android:text="Blood Enquiries"
        android:textColor="@color/sta_bg"
        android:textSize="18dp" />

    <View
        android:id="@+id/veiwww"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/bld_enq"
        android:layout_marginTop="20dp"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="fill_parent" android:id="@+id/rel_view"
        android:layout_height="wrap_content"
        android:layout_below="@+id/veiwww"
        >

        <View
            android:id="@+id/veiwwww"
            android:layout_width="5dp"
            android:layout_alignParentLeft="true"
            android:layout_height="170dp"
            android:background="@android:color/white" />

        <ImageView
            android:id="@+id/view_sta"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_toRightOf="@+id/veiwwww"
            android:background="@drawable/image" />

        <View
            android:id="@+id/line"
            android:layout_width="7dp"
            android:layout_height="170dp" android:layout_alignParentRight="true"
            android:background="@android:color/white" />
    </RelativeLayout>
    
    
    <View
        android:id="@+id/veiwwwwww"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/rel_view"
        android:background="@android:color/white" />
    

</RelativeLayout>