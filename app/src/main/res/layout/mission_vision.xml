<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" >
    
     
    <TextView
            android:id="@+id/mission_vission"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Mission_Vission"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:background="#AFEEEE"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    
      <ScrollView  android:layout_width="fill_parent"   android:layout_below="@+id/mission_vission"
            android:layout_height="fill_parent" > 
    
    
    
     <TextView
            android:id="@+id/txt_contact_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mission"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_below="@+id/mission_vission"
            android:textColor="#000000"
            android:textSize="14sp"
             />
    
    </ScrollView>
    

</RelativeLayout>
