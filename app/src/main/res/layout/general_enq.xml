<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/view3">
        <android.support.v7.widget.Toolbar
            android:id="@+id/enquirytoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>
      <RelativeLayout
        android:id="@+id/relativeLayout12"
        android:layout_width="fill_parent"
          android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3">
   
  <RelativeLayout
        android:id="@+id/relativeLayout123"  
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >

      <EditText
        android:id="@+id/edt_name_general"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="12"
        android:hint="Enter Name"
        android:paddingLeft="8dp"
        android:background="@color/apointment2_color"
          android:textColor="@color/colorAccent"
          android:textColorHint="@color/colorAccent"
        android:inputType="text"
        android:textCursorDrawable="@null"/>
      
      </RelativeLayout>
      
  
  <RelativeLayout
        android:id="@+id/relativeLayout1234"  
        android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
        android:layout_below="@+id/relativeLayout123"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >

    
      <EditText
        android:id="@+id/edt_mbl_general"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="12"
          android:textColor="@color/colorAccent"
          android:textColorHint="@color/colorAccent"
          android:hint="Enter Mobile Number"
          android:paddingLeft="8dp"
        android:inputType="number"
        android:layout_toRightOf="@+id/text_mbl"
          android:background="@color/apointment2_color"
        />
      
      </RelativeLayout>
  
      
   
  <RelativeLayout
        android:id="@+id/relativeLayout12345"  
        android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
        android:layout_below="@+id/relativeLayout1234"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >

      <EditText
        android:id="@+id/edt_email_general"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="12"
          android:textColor="@color/colorAccent"
          android:textColorHint="@color/colorAccent"
          android:hint="Enter Email"
          android:paddingLeft="8dp"
        android:inputType="textEmailAddress"
        android:layout_toRightOf="@+id/text_email"
          android:background="@color/apointment2_color"
        />
      </RelativeLayout>
  
  
  
  <RelativeLayout
        android:id="@+id/relativeLayout123456"  
        android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
        android:layout_below="@+id/relativeLayout12345"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textMultiLine"
          android:ems="10"
          android:lines="4"
          android:textColor="@color/colorAccent"
          android:textColorHint="@color/colorAccent"
          android:maxLines="10"
          android:minLines="4"
          android:hint="Enter Address"
          android:paddingLeft="8dp"
          android:id="@+id/edt_equry_general"
          android:scrollbars="vertical"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:background="@color/apointment2_color"/>
  </RelativeLayout>
  
  
   <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Submit"
       android:textStyle="bold"
       android:textSize="16dp"
        android:ems="8"
       android:layout_marginRight="20dp"
        android:padding="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/relativeLayout123456"
        />
      
  
  
       </RelativeLayout>
       
        <View
            android:id="@+id/veiwwww"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/relativeLayout12"
            android:background="@color/enq_blue"/>
      
    <TextView
        android:id="@+id/stat_enq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enq_qery"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/enq_blue"
        android:layout_gravity="center"
        android:layout_below="@+id/veiwwww"
        android:layout_centerHorizontal="true" />
      
       <View
            android:id="@+id/veiww"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/stat_enq"
            android:background="@color/enq_blue"/>

</RelativeLayout>

</ScrollView>
