<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB351C">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="750dp" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"  
        android:background="@android:color/white"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
       </RelativeLayout>

      <View
            android:id="@+id/veiw"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/relativeLayout1"
            android:background="@color/abt_bg"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Enter Name"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/registereditbac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:id="@+id/fullName"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:paddingLeft="20dp"
        android:background="@drawable/registereditbac"
        android:id="@+id/phoneNumber"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/surName"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="Enter Email"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/registereditbac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/email"
        android:layout_below="@+id/phoneNumber"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/location"
        android:hint="Enter Location"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/registereditbac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter City"
        android:paddingLeft="20dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="@drawable/registereditbac"
        android:id="@+id/city"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/address"
        android:layout_alignLeft="@+id/homeTown"
        android:layout_alignStart="@+id/homeTown"
        android:layout_alignRight="@+id/homeTown"
        android:layout_alignEnd="@+id/homeTown" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Home Town"
        android:paddingLeft="20dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/registereditbac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/homeTown"
        android:layout_below="@+id/city"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Profession"
        android:paddingLeft="20dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/registereditbac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/profession"
        android:layout_below="@+id/homeTown"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="#CB351C"
        android:id="@+id/register"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/profession"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/surName"
        android:hint="Enter Surname"
        android:paddingLeft="20dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/registereditbac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/fullName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/address"
        android:hint="Enter Address"
        android:paddingLeft="20dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/registereditbac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>
