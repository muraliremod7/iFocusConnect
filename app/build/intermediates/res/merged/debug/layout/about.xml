<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"   android:background="@color/abt_bg"
    android:layout_height="match_parent" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abt_bg"
    android:orientation="vertical" >

    
    <RelativeLayout
        android:id="@+id/relativeLayout1"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >
   

  
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="25dp"  android:layout_alignParentLeft="true"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/back" />
    
      <TextView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="About iFocus"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />
      
       </RelativeLayout>
       
     <View
            android:id="@+id/veiw"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/relativeLayout1"
            android:background="@android:color/white"/>
           

    <Button
        android:id="@+id/about_ifocus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="About the Mission"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:textSize="18dp"
        android:padding="14dp"
        android:drawableRight="@drawable/nexticon"
        android:textColor="@color/abt_bg"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/veiw"
        android:background="#ffffff" />

    <Button
        android:id="@+id/about_structure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
          android:paddingRight="10dp"
        android:drawableRight="@drawable/nexticon"
        android:layout_below="@+id/about_ifocus"
        android:layout_marginLeft="4dp"
        android:text="Our Structure"
         android:textSize="18dp"
          android:padding="14dp"
        android:textColor="@color/abt_bg"
        android:layout_marginRight="4dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/about_mission_clb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_structure"
        android:layout_marginTop="4dp"
        android:padding="14dp"
         android:textSize="18dp"
          android:paddingRight="10dp"
        android:drawableRight="@drawable/nexticon"
        android:textColor="@color/abt_bg"
        android:text="Sanjiwani Club"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#ffffff" />
    
    
    <Button
        android:id="@+id/about_faq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_mission_clb"
        android:layout_marginTop="4dp"
        android:textColor="@color/abt_bg"
        android:text="FAQ'S"
         android:padding="14dp"
         android:textSize="18dp"
          android:paddingRight="10dp"
        android:drawableRight="@drawable/nexticon"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#ffffff" />
    
    
    <Button
        android:id="@+id/about_pledge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_faq"
        android:layout_marginTop="4dp"
          android:paddingRight="10dp"
           android:textSize="18dp"
            android:padding="14dp"
        android:drawableRight="@drawable/nexticon"
        android:layout_marginBottom="4dp"
        android:textColor="@color/abt_bg"
        android:text="Pledge-Declaration"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/about_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_pledge"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="Contact"
         android:textSize="18dp"
          android:padding="14dp"
          android:paddingRight="10dp"
        android:drawableRight="@drawable/nexticon"
        android:textColor="@color/abt_bg"
        android:background="@android:color/white"
        />

     <ImageView
        android:id="@+id/img_mission"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:layout_below="@+id/about_contact"
        android:src="@drawable/logo" />

</RelativeLayout>



</ScrollView>