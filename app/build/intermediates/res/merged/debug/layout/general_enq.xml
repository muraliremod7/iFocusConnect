<?xml version="1.0" encoding="utf-8"?>
<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" >
    
     <RelativeLayout
        android:id="@+id/relativeLayout1"  
        android:background="@android:color/white"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >
   

  
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="25dp"  android:layout_alignParentLeft="true"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/back_enq" />
    
      <TextView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="General Enquiry"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:textColor="@color/enq_blue"
        android:textSize="24sp"
        android:textStyle="bold" />
      
       </RelativeLayout>
       
      <View
            android:id="@+id/veiw"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/relativeLayout1"
            android:background="@color/enq_blue"/>
           
      <RelativeLayout
        android:id="@+id/relativeLayout12"  
        android:layout_below="@+id/veiw"
        android:background="@color/enq_blue"
        android:layout_marginTop="40dp" 
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >
   
  <RelativeLayout
        android:id="@+id/relativeLayout123"  
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >
  
    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"  android:layout_alignParentLeft="true"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Name"
        android:ems="3"
        android:textStyle="bold"
        android:gravity="left|center"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        />
    
      <EditText
        android:id="@+id/edt_name_general"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="12"
        android:inputType="text"
         android:textCursorDrawable="@null"
        android:layout_toRightOf="@+id/text_name"
        android:background="@android:color/white"
        />
      
      </RelativeLayout>
      
  
  <RelativeLayout
        android:id="@+id/relativeLayout1234"  
        android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
        android:layout_below="@+id/relativeLayout123"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >
  
    <TextView
        android:id="@+id/text_mbl"
        android:layout_width="wrap_content"  android:layout_alignParentLeft="true"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Mobile"
        android:ems="3"
        android:textStyle="bold"
        android:gravity="left|center"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        />
    
      <EditText
        android:id="@+id/edt_mbl_general"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="12"
        android:inputType="number"
         android:textCursorDrawable="@null"
        android:layout_toRightOf="@+id/text_mbl"
        android:background="@android:color/white"
        />
      
      </RelativeLayout>
  
      
   
  <RelativeLayout
        android:id="@+id/relativeLayout12345"  
        android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
        android:layout_below="@+id/relativeLayout1234"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >
  
    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"  android:layout_alignParentLeft="true"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="E-Mail"
        android:ems="3"
        android:textStyle="bold"
        android:gravity="left|center"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        />
    
      <EditText
        android:id="@+id/edt_email_general"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="12"
        android:inputType="textEmailAddress"
         android:textCursorDrawable="@null"
        android:layout_toRightOf="@+id/text_email"
        android:background="@android:color/white"
        />
      
      </RelativeLayout>
  
  
  
  <RelativeLayout
        android:id="@+id/relativeLayout123456"  
        android:layout_marginTop="15dp"
         android:layout_marginLeft="10dp"
        android:layout_below="@+id/relativeLayout12345"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" >
  
    <TextView
        android:id="@+id/text_query"
        android:layout_width="wrap_content"  android:layout_alignParentLeft="true"
        android:layout_height="130dp"
        android:layout_marginLeft="20dp"
        android:text="Query"
        android:ems="3"
        android:textStyle="bold"
        android:gravity="left|center"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        />
    
      <EditText
        android:id="@+id/edt_equry_general"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:ems="12"
        android:inputType="text"
         android:textCursorDrawable="@null"
        android:layout_toRightOf="@+id/text_query"
        android:background="@android:color/white"
        />
      
      </RelativeLayout>
  
  
   <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/enq_blue"
        android:text="Submit"
        android:ems="8"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/submitbutton"
        android:layout_below="@+id/relativeLayout123456"
        />
      
  
  
       </RelativeLayout>
       
        <View
            android:id="@+id/veiwwww"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/relativeLayout12"
            android:background="@color/enq_blue"/>
      
    <TextView
        android:id="@+id/stat_enq"
        android:layout_width="wrap_content"  android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/enq_qery"
        android:layout_below="@+id/veiwwww"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="@color/enq_blue"
        />
      
       <View
            android:id="@+id/veiww"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/stat_enq"
            android:background="@color/enq_blue"/>

</RelativeLayout>

</ScrollView>
