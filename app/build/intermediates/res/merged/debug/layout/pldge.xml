<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" >
    
     <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_stu" />

        <TextView
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="10dp"
            android:layout_toRightOf="@+id/btn_back"
            android:text="  Pledge and Declaration"
            android:textColor="@color/abt_bg"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/veiw"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="4dp"
        android:background="@color/abt_bg" />
    
     <ScrollView  android:layout_width="fill_parent"   android:layout_below="@+id/veiw"
            android:layout_height="fill_parent" > 
    
    
    
    
    <TextView
            android:id="@+id/txt_faq_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pldge"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
             />
    </ScrollView>
    

</RelativeLayout>
